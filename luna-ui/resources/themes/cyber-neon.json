{
  "name": "Cyber Neon",
  "version": "1.0",
  "description": "Cyberpunk-inspired neon theme",
  "colors": {
    "background": "#0a0a0f",
    "surface": "#111118",
    "primary": "#00ffff",
    "secondary": "#ff00ff",
    "accent": "#ffff00",
    "textPrimary": "#ffffff",
    "textSecondary": "#9ca3af",
    "focus": "#00ffff",
    "hover": "#1a1a2e",
    "cardBackground": "#111118"
  },
  "layout": {
    "sidebarWidth": 220, "gridColumns": 4, "cardAspectRatio": "3:4",
    "fontSize": { "small": 14, "medium": 16, "large": 24, "xlarge": 32 }
  },
  "effects": { "animations": true, "particles": true, "blur": true, "glow": true, "transitionSpeed": 150 },
  "fonts": { "heading": "Orbitron", "body": "Inter", "ui": "Inter" }
}
